<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity"
    android:background="@drawable/painel">

    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#EA5B0C">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlPropagandaMain"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/rlBottomMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivPropagandaMain"
            android:layout_width="1020dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:scaleType="centerCrop"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="420dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/rlBottomMain">

        <RelativeLayout
            android:id="@+id/rlAvisosMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rlContatoMain"
            android:background="#F1E9E6"
            android:gravity="center"
            android:alpha=".9">

            <TextView
                android:fontFamily="sans-serif-smallcaps"
                android:id="@+id/tvAvisoMain"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Galo Mídia Avançada \n\n Acesse: \n\n www.galomidiaavancada.com.br"
                android:textColor="#095964"
                android:textSize="20sp"/>

        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/rlContatoMain"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="#E1E1E1">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/ivLogoMain"
                android:layout_width="170dp"
                android:layout_height="76dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/rsz_logo_cor"
                android:layout_alignParentLeft="true" />

            <TextView
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/ivLogoMain"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="(84) 9 8181-1101"
                android:textColor="#095964"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlBottomMain"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp">

        <RelativeLayout
            android:id="@+id/rlG1LogoMain"
            android:layout_width="180dp"
            android:layout_alignParentLeft="true"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <ImageView
                android:layout_width="320dp"
                android:layout_height="226dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/rsz_logo_cor"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlCentralNewsMain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/rlG1LogoMain"
            android:layout_toLeftOf="@+id/rlRightInfoMain"
            android:layout_above="@+id/rlBottomDolarMain"
            android:background="#EA5B0C">

            <TextView
                android:id="@+id/tvRssMain"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorPrimary"
                android:text="www.galomidiaavancada.com.br"/>

            <TextView
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:id="@+id/tvFonteMain"
                android:textSize="12sp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorPrimary"
                android:text="FONTE G1"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlBottomDolarMain"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/rlG1LogoMain"
            android:layout_toLeftOf="@+id/rlRightInfoMain"
            android:background="#C04A0A">

            <TextView
                android:id="@+id/tvCotacaoDolarMain"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/textColorPrimary"
                android:text=" www.galomidiaavancada.com.br "/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlRightInfoMain"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#106D7C"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivTimeMain"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_access_time_white_48dp"/>

            <TextView
                android:layout_toRightOf="@+id/ivTimeMain"
                android:id="@+id/tvTimeMain"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorPrimary"
                android:layout_marginLeft="10dp"
                android:text="00:00"/>

            <ImageView
                android:id="@+id/ivCloudMain"
                android:layout_below="@+id/ivTimeMain"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_cloud_queue_white_48dp"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/ivTimeMain"
                android:layout_toRightOf="@id/ivCloudMain"
                android:id="@+id/tvCloudMain"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorPrimary"
                android:text="00ºC"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ProgressBar
            android:id="@+id/pbLoading"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="visible" />

    </RelativeLayout>

</RelativeLayout>
